{
  "name": "better-discord-client",
  "version": "1.0.0",
  "description": "A lightweight Discord Gateway client focused on message handling",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target node && tsc -p tsconfig.build.json",
    "test": "bun test",
    "prepublishOnly": "bun run build",
    "prepare": "bun run build"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5"
  },
  "keywords": [
    "discord",
    "gateway",
    "websocket",
    "bot",
    "client"
  ],
  "license": "MIT",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  }
}
